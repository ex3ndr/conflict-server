// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SyncState {
  key   String @id
  value String

  @@map("sync_state")
}

enum SessionState {
  CREATED
  JOINED
  STARTED
  FINISHED
}

model Session {
  id Int @id @default(autoincrement())
  uid String @unique
  repeatKey String @unique
  createdAt DateTime @default(now())

  // Side A
  nameA String
  joinTokenA String?

  // Side B
  nameB String
  joinTokenB String?

  // Description
  description String

  // Started
  state SessionState @default(CREATED)
  mid Int @default(0)

  // If AI response is needed
  needAI Boolean @default(false)

  @@map("session")
}